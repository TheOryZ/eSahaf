@model eSahaf_DAL.Core.Writers


@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Edit Writer 
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" method="post" action="/Admin/EditWriter">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Writer ID :</label>
                        <div class="col-lg-6">
                            <input type="text" readonly class="form-control" name="WriterID" value="@Model.WriterID">
                        </div>
                        <div class="col-lg-4"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Writer Name :</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="WriterName" value="@Model.WriterName">
                        </div>
                        <div class="col-lg-4"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">About :</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="About" value="@Model.About">
                        </div>
                        <div class="col-lg-4"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Edit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

