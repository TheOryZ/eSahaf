@model List<eSahaf_DAL.Core.Writers>

@{
    ViewBag.Title = "Writers";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        Writers List
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/AddNewWriter" class="btn btn-success">
                        Add New <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Writer Name</th>
                        <th>About</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="">
                            <td class="center">@item.WriterName</td>
                            <td class="center">@item.About</td>
                            <td>
                                <a class="edit" href="@Url.Action("EditWriter","Admin", new {writerID = item.WriterID })">
                                    <li class="icon-pencil">
                                        Edit
                                    </li>
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="@Url.Action("DeleteWriter","Admin", new {writerID = item.WriterID })">
                                    <li class="icon-trash">
                                        Delete
                                    </li>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

