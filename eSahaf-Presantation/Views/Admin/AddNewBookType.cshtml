<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Add New Book Type
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" method="post" action="/Admin/AddNewBookType">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Book Type Name :</label> 
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="BookTypeName">
                        </div>
                        <div class="col-lg-4"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Explanation :</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="Explanation">
                        </div>
                        <div class="col-lg-4"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

